<script>
  // --- small helpers ---
  function scrollToSection(id){ document.getElementById(id)?.scrollIntoView({behavior:'smooth',block:'start'}) }
  function openWhatsApp(){
    // prefilled message (URL encoded)
    const number = '9109326828';
    const text = encodeURIComponent('Hi! I want to book a photoshoot. Please share available dates and packages.');
    window.open(`https://wa.me/${number}?text=${text}`, '_blank');
  }

  // --- lightbox functions ---
  const lightbox = document.getElementById('lightbox');
  const lightboxImg = document.getElementById('lightboxImg');
  function openLightbox(imgEl){
    const url = imgEl.getAttribute('data-large') || imgEl.src;
    lightboxImg.src = url;
    lightbox.classList.add('open');
    lightbox.setAttribute('aria-hidden','false');
  }
  function closeLightbox(e){
    // close only when clicking background or close btn (not the image)
    if(e.target === lightbox || e.target.classList.contains('lightbox-close')) {
      lightbox.classList.remove('open');
      lightbox.setAttribute('aria-hidden','true');
      lightboxImg.src = '';
    }
  }

  // set year
  document.getElementById('yr').textContent = new Date().getFullYear();

  // Accessibility: close on ESC
  document.addEventListener('keydown', function(e){ if(e.key === 'Escape'){ lightbox.classList.remove('open'); lightbox.setAttribute('aria-hidden','true'); lightboxImg.src=''; }});
</script>
